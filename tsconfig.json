{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "paths": {
      "~/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
